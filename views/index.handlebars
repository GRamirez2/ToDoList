<div class = "wrapper-small">  
    <h1>This is where the "header" will live</h1>

    <section class="grid">
      <div>
        <h2>todo that are not complete!</h2>

        <ul>
          {{#each todo}}
            {{#unless this.complete}}
              <li>
                {{this.name}}

                <form action="todo/update/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="complete" value="true">
                  <button type="submit">SLEEP TIME!</button>
                </form>

                
              </li>
            {{/unless}}
          {{/each}}
        </ul>
      </div>

      <div>
        <h2>todo that are complete!</h2>

        <ul>
          {{#each todo}}
            {{#if this.complete}}
              <li>
                {{this.name}}

                <form action="todo/update/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="complete" value="false">
                  <button type="submit">WAKE UP!</button>
                </form>

                
              </li>
            {{/if}}
          {{/each}}
        </ul>
      </div>
    </section>
</div><!--end of main container-->

<h2>Add a Task</h2>
<form class="create-update-form" action="todo/create" method="POST">

  <div class="form-group">
    <label for="ca">Task Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Completed?</label><br>
    <input type="radio" name="complete" value="1" checked> Complete<br>
    <input type="radio" name="complete" value="0"> Incomplete
  </div>

  <button type="submit">Add Task</button>
</form>
